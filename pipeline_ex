pipeline {
    agent any

    stages {
        stage('Build Code') {
            steps {
                echo 'The code will build here '
                sh'''
                pwd
                ls
                mkdir build code
                '''
            }
        }
        
        stage('test stage') {
            steps {
       
                echo 'This should be ready. I should test it now.'
                bat '''
                dir
                echo "This is the bat shell"
                '''
                }
            }
        
        
         stage('acceptance test stage') {
            steps {
                echo 'acceptance test'
            }
        }
    }
}

